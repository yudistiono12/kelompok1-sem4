<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <ImageView
        android:id="@+id/formbackg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/formlogo"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/logopolije"
        android:scaleType="fitCenter"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perpustakaan Polibon"
        android:layout_below="@id/formlogo"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="27dp"
        android:gravity="center"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/formlogo"
        android:id="@+id/scrollView"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/transparan"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selamat Datang !"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silahkan masuk atau daftar jika belum bergabung!"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginBottom="30dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Isikan NIM"
                android:paddingStart="23dp"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="14sp"
                android:id="@+id/editTextNim"
                android:layout_marginBottom="20dp"
                android:paddingLeft="23dp" />

            <AutoCompleteTextView
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Isikan Password"
                android:paddingStart="23dp"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="14sp"
                android:id="@+id/editTextPassword"
                android:layout_marginBottom="20dp"
                android:paddingLeft="23dp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                android:id="@+id/buttonMasuk"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:text="MASUK"
                android:textStyle="bold"
                android:background="@drawable/register_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                />
                <Button
                android:id="@+id/buttonDaftar"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:text="DAFTAR"
                android:textStyle="bold"
                android:background="@drawable/register_button"
                    android:layout_marginLeft="37dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi ini masih tahap uji, dibuat oleh kelompok 1 TIF Bondowoso"
        android:textColor="@color/white"
        android:layout_below="@id/scrollView"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        />

</RelativeLayout>